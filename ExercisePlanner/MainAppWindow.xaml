<Window x:Class="ExercisePlanner.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercise Planner" Height="450" Width="700">
    <Grid>
        <!-- Welcome Message -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="0,10,0,0" 
                   Text="{Binding WelcomeMessage}" />

        <!-- Days of the Week View -->
        <TabControl x:Name="DaysTabControl" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,40,10,60">
            <TabItem Header="Monday" />
            <TabItem Header="Tuesday" />
            <TabItem Header="Wednesday" />
            <TabItem Header="Thursday" />
            <TabItem Header="Friday" />
            <TabItem Header="Saturday" />
            <TabItem Header="Sunday" />
        </TabControl>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Add" Width="100" Margin="10" Click="AddExerciseButton_Click" />
            <Button Content="Edit" Width="100" Margin="10" Click="EditExerciseButton_Click" />
            <Button Content="Delete" Width="100" Margin="10" Click="DeleteExerciseButton_Click" />
        </StackPanel>
    </Grid>
</Window>