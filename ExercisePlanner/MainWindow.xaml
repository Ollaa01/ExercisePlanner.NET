<Window x:Class="ExercisePlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="20">
        <!-- Title -->
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Username Label -->
        <TextBlock Text="Username:" VerticalAlignment="Top" Margin="50,70,0,0" FontSize="14"/>
        <TextBox Name="UsernameTextBox" Width="250" Height="30" VerticalAlignment="Top" Margin="50,100,50,0" />

        <!-- Password Label -->
        <TextBlock Text="Password:" VerticalAlignment="Top" Margin="50,140,0,0" FontSize="14"/>
        <PasswordBox Name="PasswordBox" Width="250" Height="30" VerticalAlignment="Top" Margin="50,170,50,0" />

        <!-- Login Button -->
        <Button Content="Log In" Width="250" Height="35" VerticalAlignment="Top" Margin="50,210,50,0" Click="LoginButton_Click"/>

        <!-- Register Button -->
        <Button Content="Register" Width="250" Height="35" VerticalAlignment="Top" Margin="50,250,50,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>
