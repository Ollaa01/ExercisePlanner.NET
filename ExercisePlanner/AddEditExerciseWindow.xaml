<Window x:Class="ExercisePlanner.AddEditExerciseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Exercise" Height="500" Width="500" Background="#E0F7FA">
    <Grid Margin="20">
        <TextBlock Text="Exercise Name:" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="16" Foreground="#00796B"/>
        <TextBox x:Name="ExerciseNameTextBox" VerticalAlignment="Top" Margin="10,30,10,0" Width="360" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>

        <TextBlock Text="Category:" VerticalAlignment="Top" Margin="10,70,0,0" FontSize="16" Foreground="#00796B"/>
        <TextBox x:Name="CategoryTextBox" VerticalAlignment="Top" Margin="10,90,10,0" Width="360" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>

        <TextBlock Text="Reps:" VerticalAlignment="Top" Margin="10,130,0,0" FontSize="16" Foreground="#00796B"/>
        <TextBox x:Name="RepsTextBox" VerticalAlignment="Top" Margin="10,150,10,0" Width="360" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>

        <TextBlock Text="Sets:" VerticalAlignment="Top" Margin="10,190,0,0" FontSize="16" Foreground="#00796B"/>
        <TextBox x:Name="SetsTextBox" VerticalAlignment="Top" Margin="10,210,10,0" Width="360" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>

        <TextBlock Text="Day:" VerticalAlignment="Top" Margin="10,250,0,0" FontSize="16" Foreground="#00796B"/>
        <ComboBox x:Name="DayComboBox" VerticalAlignment="Top" Margin="10,270,10,0" Width="360" FontSize="14" BorderBrush="#00796B" BorderThickness="2">
            <ComboBoxItem Content="Monday"/>
            <ComboBoxItem Content="Tuesday"/>
            <ComboBoxItem Content="Wednesday"/>
            <ComboBoxItem Content="Thursday"/>
            <ComboBoxItem Content="Friday"/>
            <ComboBoxItem Content="Saturday"/>
            <ComboBoxItem Content="Sunday"/>
        </ComboBox>

        <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="80" Background="White" Foreground="#00796B" BorderBrush="#004D40" BorderThickness="2" FontSize="16" FontWeight="SemiBold" Click="SaveButton_Click"/>
    </Grid>
</Window>
