<Window x:Class="ExercisePlanner.EditExerciseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Exercise" Height="500" Width="400" Background="#E0F7FA">
    <StackPanel Margin="10">
        <TextBlock Text="Exercise Name:" Margin="0 10 0 5" />
        <TextBox x:Name="ExerciseNameTextBox" Margin="0 0 0 10" FontSize="14" BorderBrush="#00796B" BorderThickness="2" Padding="5"/>

        <TextBlock Text="Category:" Margin="0 10 0 5" />
        <TextBox x:Name="CategoryTextBox" Margin="0 0 0 10" FontSize="14" BorderBrush="#00796B" BorderThickness="2" Padding="5"/>

        <TextBlock Text="Reps:" Margin="0 10 0 5" />
        <TextBox x:Name="RepsTextBox" Margin="0 0 0 10" FontSize="14" BorderBrush="#00796B" BorderThickness="2" Padding="5"/>

        <TextBlock Text="Sets:" Margin="0 10 0 5" />
        <TextBox x:Name="SetsTextBox" Margin="0 0 0 10" FontSize="14" BorderBrush="#00796B" BorderThickness="2" Padding="5"/>

        <TextBlock Text="Day:" Margin="0 10 0 5" />
        <ComboBox x:Name="DayComboBox" Margin="0 0 0 10" Width="360" FontSize="14" BorderBrush="#00796B" BorderThickness="2" Padding="5">
            <ComboBoxItem Content="Monday"/>
            <ComboBoxItem Content="Tuesday"/>
            <ComboBoxItem Content="Wednesday"/>
            <ComboBoxItem Content="Thursday"/>
            <ComboBoxItem Content="Friday"/>
            <ComboBoxItem Content="Saturday"/>
            <ComboBoxItem Content="Sunday"/>
        </ComboBox>


        <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,10,10" Width="80" 
                Background="#00796B" Foreground="White" FontSize="14" FontWeight="SemiBold" BorderBrush="#004D40" BorderThickness="2" 
                Padding="5" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
