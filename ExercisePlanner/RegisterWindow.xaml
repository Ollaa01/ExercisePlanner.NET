<Window x:Class="ExercisePlanner.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Confirm Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0,0,0,10"/>

            <Button Content="Register" Width="200" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
