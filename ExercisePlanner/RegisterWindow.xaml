<Window x:Class="ExercisePlanner.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="500" Width="500" Background="#E0F7FA">
    <Grid Margin="20">

        <TextBlock Text="Create Account" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="#00796B"/>


        <TextBlock Text="Username:" VerticalAlignment="Top" Margin="50,100,0,0" FontSize="16" Foreground="#00796B"/>
        <TextBox x:Name="UsernameTextBox" Width="300" Height="40" VerticalAlignment="Top" Margin="50,130,50,0" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>


        <TextBlock Text="Password:" VerticalAlignment="Top" Margin="50,180,0,0" FontSize="16" Foreground="#00796B"/>
        <PasswordBox x:Name="PasswordBox" Width="300" Height="40" VerticalAlignment="Top" Margin="50,210,50,0" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>

        <TextBlock Text="Confirm Password:" VerticalAlignment="Top" Margin="50,270,0,0" FontSize="16" Foreground="#00796B"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Width="300" Height="40" VerticalAlignment="Top" Margin="50,300,50,0" FontSize="14" Padding="10" BorderBrush="#00796B" BorderThickness="2"/>

        <Button Content="Register" Width="250" Height="35" VerticalAlignment="Center" Margin="50,380,50,0" Click="RegisterButton_Click" Background="White" Foreground="#00796B" BorderBrush="#004D40" BorderThickness="2" FontSize="16" FontWeight="SemiBold"/>
    </Grid>
</Window>
